<routes>
  <!-- Public Transports -->
  <vType vClass="bus"  id="bus"   maxSpeed="1.3" personCapacity="50" latAlignment="center" tau="0.5" speedDev="0.1" lcCooperative="0.0">
    <param key="has.rerouting.device" value="false"/>
  </vType>
  <vType vClass="rail" id="train" maxSpeed="1.3" personCapacity="500">
    <param key="has.rerouting.device" value="false"/>
  </vType>

  <vTypeDistribution id="on-demand">
    <vType vClass="taxi"       id="taxi"  maxSpeed="1.3" personCapacity="4" latAlignment="center" probability=".50" tau="0.5" speedDev="0.1"/>
    <vType vClass="passenger"  id="uber"  maxSpeed="1.3" personCapacity="8" latAlignment="center" probability=".50" tau="0.5" speedDev="0.1"/>
  </vTypeDistribution>

  <!-- Vulnerable Road Users -->
  <vTypeDistribution id="pedestrian">
    <vType vClass="pedestrian"   id="slowpedestrian"  maxSpeed="1.3" latAlignment="compact" probability=".33"/>
    <vType vClass="pedestrian"   id="avgpedestrian"   maxSpeed="1.3" latAlignment="compact" probability=".33"/>
    <vType vClass="pedestrian"   id="fastpedestrian"  maxSpeed="1.3" latAlignment="compact" probability=".33"/>
  </vTypeDistribution>
  <vTypeDistribution id="bicycle">
    <vType vClass="bicycle"      id="slowbicycle"     maxSpeed="1.3" latAlignment="compact" probability=".33"/>
    <vType vClass="bicycle"      id="avgbicycle"      maxSpeed="1.3" latAlignment="compact" probability=".33"/>
    <vType vClass="bicycle"      id="fastbicycle"     maxSpeed="1.3" latAlignment="compact" probability=".33"/>
  </vTypeDistribution>

  <!-- Normal vehicles -->
  <vTypeDistribution id="ptw">
    <vType vClass="motorcycle" id="motorcycle"  maxSpeed="1.3" personCapacity="2" latAlignment="arbitrary" lcPushy="1.0" minGapLat="0.5" probability=".70" tau="0.5" speedDev="0.1"/>
    <vType vClass="moped"      id="moped"       maxSpeed="1.3" personCapacity="1" latAlignment="arbitrary" lcPushy="1.0" minGapLat="0.5" probability=".30" tau="0.5" speedDev="0.1"/>
  </vTypeDistribution>
  <vTypeDistribution id="passenger">
    <vType vClass="passenger"  id="passenger1"  maxSpeed="1.3" personCapacity="4" latAlignment="center" sigma="0.25" probability=".20" tau="0.5" speedDev="0.1" guiShape="passenger"/>
    <vType vClass="passenger"  id="passenger2a" maxSpeed="1.3" personCapacity="4" latAlignment="center" sigma="0.30" probability=".20" tau="0.5" speedDev="0.1" guiShape="passenger/sedan"/>
    <vType vClass="passenger"  id="passenger2b" maxSpeed="1.3" personCapacity="4" latAlignment="center" sigma="0.35" probability=".20" tau="0.5" speedDev="0.1" guiShape="passenger/hatchback"/>
    <vType vClass="passenger"  id="passenger3"  maxSpeed="1.3" personCapacity="6" latAlignment="center" sigma="0.40" probability=".20" tau="0.5" speedDev="0.1" guiShape="passenger/wagon"/>
    <vType vClass="passenger"  id="passenger4"  maxSpeed="1.3" personCapacity="6" latAlignment="center" sigma="0.50" probability=".20" tau="0.5" speedDev="0.1" guiShape="passenger/van"/>
  </vTypeDistribution>

  <!-- Special vehicles -->
  <vTypeDistribution id="special">
    <vType vClass="emergency" id="emergency" maxSpeed="1.3" latAlignment="center" probability=".60" tau="0.5" speedDev="0.1"/>
    <vType vClass="authority" id="authority" maxSpeed="1.3" latAlignment="center" probability=".39" tau="0.5" speedDev="0.1"/>
    <vType vClass="army"      id="army"      maxSpeed="1.3" latAlignment="center" probability=".01" tau="0.5" speedDev="0.1"/>
  </vTypeDistribution>

  <!-- Other vehicles -->
  <vTypeDistribution id="commercial">
    <vType vClass="delivery"   id="delivery"    maxSpeed="1.3" containerCapacity="15" latAlignment="center" probability=".75" tau="0.5" speedDev="0.1" lcCooperative="0.0"/>
    <vType vClass="truck"      id="truck"       maxSpeed="1.3" containerCapacity="5"  latAlignment="center" probability=".05" tau="0.5" speedDev="0.1" lcCooperative="0.0"/>
    <vType vClass="trailer"    id="trailer"     maxSpeed="1.3" containerCapacity="5"  latAlignment="center" probability=".10" tau="0.5" speedDev="0.1" lcCooperative="0.0"/>
    <vType vClass="coach"      id="coach"       maxSpeed="1.3" containerCapacity="50" latAlignment="center" probability=".10" tau="0.5" speedDev="0.1" lcCooperative="0.0"/>
  </vTypeDistribution>

  <vType vClass="evehicle"     id="evehicle"    maxSpeed="1.3" personCapacity="4"     latAlignment="center" tau="0.5" speedDev="0.1"/>
</routes>
